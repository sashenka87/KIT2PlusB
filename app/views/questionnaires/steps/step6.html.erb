<h2>Questionnaire Part 7</h2>
<br>

<%= render "questionnaires/instructions/instructions", :part => 1, :ad_test => @participant.ad_test %>

<%= form_for @questionnaire, :html => { :class => 'form-horizontal' } do |f| %>
  <%= render "shared/error_messages", :object => f.object %>
  <p class="instructions">
    <%= render 'questionnaires/instructions/context_instructions', :part => 1, :ad_test => @participant.ad_test %>
  </p>
  
  <div class="control-group">
    <%= f.text_area :context1, :class => "span8", :rows => 8 %>
  </div>

  <p>
    <%= f.submit "Next Step", :class => 'btn btn-primary' %>
  </p>
<% end %>