<%- model_class = Demographic.new.class -%>
<h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:participant_id) %></th>
      <th><%= model_class.human_attribute_name(:gender) %></th>
      <th><%= model_class.human_attribute_name(:age) %></th>
      <th><%= model_class.human_attribute_name(:ethnicity) %></th>
      <th><%= model_class.human_attribute_name(:major) %></th>
      <th><%= model_class.human_attribute_name(:year_university) %></th>
      <th><%= model_class.human_attribute_name(:gpa) %></th>
      <th><%= model_class.human_attribute_name(:country_of_residence) %></th>
      <th><%= model_class.human_attribute_name(:country_of_birth) %></th>
      <th><%= model_class.human_attribute_name(:country_of_schooling) %></th>
      <th><%= model_class.human_attribute_name(:native_english) %></th>
      <th><%= model_class.human_attribute_name(:native_language) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @demographics.each do |demographic| %>
      <tr>
        <td><%= link_to demographic.id, demographic_path(demographic) %></td>
        <td><%= demographic.participant_id %></td>
        <td><%= demographic.gender %></td>
        <td><%= demographic.age %></td>
        <td><%= demographic.ethnicity %></td>
        <td><%= demographic.major %></td>
        <td><%= demographic.year_university %></td>
        <td><%= demographic.gpa %></td>
        <td><%= demographic.country_of_residence %></td>
        <td><%= demographic.country_of_birth %></td>
        <td><%= demographic.country_of_schooling %></td>
        <td><%= demographic.native_english %></td>
        <td><%= demographic.native_language %></td>
        <td><%=l demographic.created_at %></td>
        <td>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      demographic_path(demographic),
                      :method => :delete,
                      :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')),
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_demographic_path,
            :class => 'btn btn-primary' %>
