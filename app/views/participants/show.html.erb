<%- model_class = @participant.class -%>
<h1><%=t '.title', :default => model_class.model_name.human %></h1>

<p>
  <strong><%= model_class.human_attribute_name(:session_id) %>:</strong><br>
  <%= @participant.session_id %>
</p>
<p>
  <strong><%= model_class.human_attribute_name(:ip_address) %>:</strong><br>
  <%= @participant.ip_address %>
</p>
<p>
  <strong><%= model_class.human_attribute_name(:first_name) %>:</strong><br>
  <%= @participant.first_name %>
</p>
<p>
  <strong><%= model_class.human_attribute_name(:last_name) %>:</strong><br>
  <%= @participant.last_name %>
</p>
<p>
  <strong><%= model_class.human_attribute_name(:instructor) %>:</strong><br>
  <%= @participant.instructor %>
</p>
<p>
  <strong><%= model_class.human_attribute_name(:country) %>:</strong><br>
  <%= @participant.country %>
</p>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              participants_path, :class => 'btn'  %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              participant_path(@participant),
              :method => 'delete',
              :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')),
              :class => 'btn btn-danger' %>
</div>
