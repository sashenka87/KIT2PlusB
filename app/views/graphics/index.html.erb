<%- model_class = Graphic.new.class -%>
<h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:participant_id) %></th>
      <th><%= model_class.human_attribute_name(:graphics_ki) %></th>
      <th><%= model_class.human_attribute_name(:graphics_ki_text) %></th>
      <th><%= model_class.human_attribute_name(:graphics_kt) %></th>
      <th><%= model_class.human_attribute_name(:graphics_it) %></th>
      <th><%= model_class.human_attribute_name(:graphics_it_text) %></th>
      <th><%= model_class.human_attribute_name(:k_def) %></th>
      <th><%= model_class.human_attribute_name(:i_def) %></th>
      <th><%= model_class.human_attribute_name(:t_def) %></th>
      <th><%= model_class.human_attribute_name(:kit) %></th>
      <th><%= model_class.human_attribute_name(:context) %></th>
      <th><%= model_class.human_attribute_name(:domain) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @graphics.each do |graphic| %>
      <tr>
        <td><%= link_to graphic.id, graphic_path(graphic) %></td>
        <td><%= graphic.participant_id %></td>
        <td><%= graphic.graphics_ki %></td>
        <td><%= graphic.graphics_ki_text %></td>
        <td><%= graphic.graphics_kt %></td>
        <td><%= graphic.graphics_it %></td>
        <td><%= graphic.graphics_it_text %></td>
        <td><%= graphic.k_def %></td>
        <td><%= graphic.i_def %></td>
        <td><%= graphic.t_def %></td>
        <td><%= graphic.kit %></td>
        <td><%= graphic.context %></td>
        <td><%= graphic.domain %></td>
        <td><%=l graphic.created_at %></td>
        <td>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      graphic_path(graphic),
                      :method => :delete,
                      :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')),
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_graphic_path,
            :class => 'btn btn-primary' %>
